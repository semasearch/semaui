= form_for([@relationship, @relationship.relationship_bits.build], :html => { :class => "form-horizontal" }) do |f|
  .form-group
    = f.label :url, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :url, :class => "form-control"
  .form-group
    = f.label :comment, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :comment, :class => "form-control"
  .form-group
    = f.label :fulltext, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :fulltext, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => "btn btn-primary"
