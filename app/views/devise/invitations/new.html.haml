= bootstrap_devise_error_messages!
.panel.panel-default
  .panel-heading
    %h4= t('.send_invite', :default => "Send invite")
  .panel-body
    = form_for(resource, :as => resource_name, :url => invitation_path(resource_name), html: { role: "form" }) do |f|
      = devise_error_messages!
      - resource.class.invite_key_fields.each do |field|
        .form-group
          = f.label field
          = f.text_field field, class: "form-control", required: true
        = f.submit t('.send_invite', :default => "Send invite"), class: "btn btn-primary"
