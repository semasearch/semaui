.page-header
  %h1 Listing suggest_relationships
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Entity instance to
        %th Entity instance from
        %th Relationship type
        %th Url
        %th{:colspan => "3"}
    %tbody
      = content_tag_for(:tr, @suggest_relationships) do |suggest_relationship|
        %td= suggest_relationship.entity_instance_to
        %td= suggest_relationship.entity_instance_from
        %td= suggest_relationship.relationship_type
        %td= suggest_relationship.url
        %td= link_to 'Show', suggest_relationship
        %td= link_to 'Edit', edit_suggest_relationship_path(suggest_relationship)
        %td= link_to 'Destroy', suggest_relationship, method: :delete, data: { confirm: 'Are you sure?' }

